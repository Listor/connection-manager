{
  "name": "connection-manager",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && tsc -b && npm run build:content && npm run build:others",
    "build:firefox": "npm run build:css && tsc -b && npm run build:firefox:content && npm run build:firefox:others",
    "build:css": "node scripts/build-css.js",
    "build:content": "vite build --config vite.content.config.ts",
    "build:others": "vite build --config vite.others.config.ts",
    "build:firefox:content": "vite build --config vite.firefox.content.config.ts",
    "build:firefox:others": "vite build --config vite.firefox.config.ts",
    "lint": "echo 'add your linter of choice'"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/webextension-polyfill": "^0.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
