{
  "manifest_version": 2,
  "name": "Connection Manager",
  "version": "1.0.0",
  "description": "Lokale Zusatzinfos & Score f√ºr LinkedIn-Kontakte (IndexedDB, JSON Import/Export)",
  "permissions": ["storage", "activeTab", "https://*.linkedin.com/*"],
  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
      "src/background/service-worker.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
        "src/content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": ["src/styles/shared.css"],
  "browser_specific_settings": {
    "gecko": {
      "id": "connection-manager@example.com",
      "strict_min_version": "78.0"
    }
  }
}
